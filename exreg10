<?php
	$i=0;
	$pessoa=array();
	$cad=array();
	for ($i=0;$i<8;$i++) {
		$pessoa["nome"]="";
		$pessoa["idade"]=0;
		$cad[$i]=$pessoa;
		$pessoa=array();
	}
	for ($i=0;$i<8;$i++) {
		echo "bota o nome:";
		$pessoa["nome"]=readline();
		echo "bota a idade:";
		$pessoa["idade"]=readline();
		$cad[$i]=$pessoa;
	}
	echo "Os registrados nas posições impares são:". "\n";
	for ($i=0;$i<8;$i++) {
		if (($i%2)!=0) {
			echo $cad[$i]["nome"]. "\n";
			echo $cad[$i]["idade"]. "\n";
		}
	}
?>
